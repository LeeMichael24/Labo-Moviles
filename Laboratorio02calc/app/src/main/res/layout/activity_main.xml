<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#343541">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="bottom|center"
        android:text="@string/Text_top_app"
        android:textColor="#ECECF1"
        android:textSize="20sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="#3E3F4B"
        app:cardElevation="8dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="2"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_weight"
            android:textColor="@color/text"
            android:textSize="30sp"
            android:layout_margin="20dp"/>

        <EditText
            android:id="@+id/text_wgt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:gravity="center"
            android:layout_gravity="start|center"
            android:layout_marginTop="40dp"
            android:layout_margin="20dp"
            android:hint="@string/Text_hint"
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:textColorHint="@color/text"
            tools:ignore="RtlCompat"
            android:inputType="numberDecimal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Text_kg"
            android:textColor="@color/text"
            android:textSize="30sp"
            android:gravity="center|end"
            android:layout_marginEnd="90dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="#3E3F4B"
        app:cardElevation="8dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="2"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_weight"
            android:textColor="@color/text"
            android:textSize="30sp"
            android:layout_margin="20dp"/>

        <EditText
            android:id="@+id/text_hgt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:gravity="center"
            android:layout_gravity="start|center"
            android:layout_marginTop="40dp"
            android:layout_margin="20dp"
            android:textAlignment="textStart"
            android:hint="@string/Text_hint"
            android:textColorHint="@color/text"
            tools:ignore="RtlCompat"
            android:inputType="numberDecimal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Text_cm"
            android:textColor="@color/text"
            android:textSize="30sp"
            android:gravity="center|end"
            android:layout_marginEnd="@dimen/margin_gap"/>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:shadowRadius="10"
        android:layout_margin="10dp"
        android:text="@string/Text_calculate"
        android:textColor="@color/text"
        android:textSize="20sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_calculation_show"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardBackgroundColor="#3E3F4B"
        app:cardElevation="8dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/text_shown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/sobrePesoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:layout_gravity="bottom"
            android:gravity="center"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>